<div class="container">
  <div class="row">
    <div class="col">
      <%= @cocktail.name %>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to 'delete ingredient', dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
      <% end %>
      <%= link_to 'add ingredients',  new_cocktail_dose_path(@cocktail) %>
      <%= link_to 'back', cocktails_path %>
    </div>
  </div>
</div>
