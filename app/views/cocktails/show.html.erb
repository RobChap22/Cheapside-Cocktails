<div class="container w-50">
  <div class="row">
    <div class="col">
      <div class="card-show mt-4">
        <div class="card-show-text">
          <% @cocktail.doses.each do |dose| %>
            <%= dose.ingredient.name.upcase %>
            <%= dose.description.downcase %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
              <i class="fas fa-minus-square"></i>
            <% end %>
          <% end %>
        </div>
        <div class="card-show-visual">
          <div class="card-show-icons">
            <%= link_to new_cocktail_dose_path(@cocktail) do %>
              <i class="fas fa-pen-fancy"></i>
            <% end %>
            <%= link_to cocktails_path do %>
              <i class="fas fa-angle-left"></i>
            <% end %>
          </div>
          <%= cl_image_tag @cocktail.photo.key, height: 300, width: 250, crop: :fill %>
        </div>
        <div class="card-show-title ml-3">
          <h1><%= @cocktail.name.upcase %></h1>
        </div>
      </div>
    </div>
  </div>
</div>
