<div class="container">
  <div class="row">
    <div class="col">
      <div class="card-show">
        <div class="card-show-text">
          <% @cocktail.doses.each do |dose| %>
            <%= dose.ingredient.name %>
            <%= dose.description %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
              <i class="fas fa-minus-square"></i>
            <% end %>
          <% end %>
        </div>
        <div class="card-show-visual">
          <div class="card-show-icons">
            <%= link_to 'add ingredients',  new_cocktail_dose_path(@cocktail) %>
            <%= link_to 'back', cocktails_path %>
          </div>
          <%= image_tag "mojito-cocktails", alt: "cocktail" %>
        </div>
        <div class="card-show-title">
          <h1><%= @cocktail.name %></h1>
        </div>
      </div>
    </div>
  </div>
</div>
